<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseBtn" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="SubmitBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
        <Setter Property="Background" Value="#b4282d"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="ResetBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
        <Setter Property="Foreground" Value="#b4282d"/>
        <Setter Property="Background" Value="White"/>
    </Style>
</ResourceDictionary>
