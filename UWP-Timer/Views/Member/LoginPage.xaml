<Page
    x:Class="UWP_Timer.Views.Member.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Timer.Views.Member"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:UWP_Timer.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/InputSkin.xaml"/>
                <ResourceDictionary Source="ms-appx:///Styles/LoginSkin.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutStateGroup">
                <VisualState x:Name="MinStatus">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainView.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="MainView.Width" Value="auto"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="LargeStatus">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="400"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainView.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="MainView.Width" Value="400"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="MainView" Width="auto" Padding="10 0 10 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <controls:Logo
                x:Name="LogoImg"
                Grid.Row="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" />

            <TextBox x:Uid="login_email" x:Name="emailTb"
                 PlaceholderText="请输入邮箱" Grid.Row="2" Style="{StaticResource CenterTextBoxStyle}"/>
            <PasswordBox x:Uid="login_pwd" 
                         x:Name="pwdTb" PlaceholderText="请输入密码" 
                        Grid.Row="3" 
                         Style="{StaticResource CenterPasswordBoxStyle}"
                         GotFocus="pwdTb_GotFocus" LostFocus="pwdTb_LostFocus"/>

            <TextBlock x:Uid="login_to_reg" x:Name="toRegisterBtn"
                   Tapped="toRegisterBtn_Tapped"
                   Text="注册账号"
                   Grid.Row="4" 
                   HorizontalAlignment="Left" Style="{StaticResource InputLabel}"/>
            <TextBlock x:Uid="login_to_reset" x:Name="toFindBtn"
                    Tapped="toFindBtn_Tapped"
                    Text="忘记密码" 
                   Grid.Row="4" 
                   HorizontalAlignment="Right" Style="{StaticResource InputLabel}"/>

            <Button x:Uid="login_btn" x:Name="LoginBtn" 
                Tapped="LoginBtn_Tapped"
                Grid.Row="5"
                Content="登录" 
                Style="{StaticResource SubmitBtn}"/>
        </Grid>
    </Grid>
</Page>
